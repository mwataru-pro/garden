<div class='col-lg-6 offset-lg-3' style="text-align: center">
  <h2 style="text-align: center; margin: 20px 0;">ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :メールアドレス %>　　　　　<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div><br>

    <div class="field">
      <%= f.label :パスワード %>　　　　　　　<%= f.password_field :password, autocomplete: "current-password" %>
    </div><br>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-success btn-lg center-block" %>
    </div>
  <% end %>
  <div class="devise-links" style="margin: 20px 0">
    <%= render "admins/shared/links" %>
  </div>
</div>

