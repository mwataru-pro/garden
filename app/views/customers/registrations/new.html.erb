<div class='col-lg-6 offset-lg-3' style="text-align: center">
  <h2 style="margin: 20px 0;">新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :last_name, "(姓)" %>　　　　　　　　　　<%= f.label :fist_name, "(名)" %><br />
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder:"例：山田" %>　<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder:"例：太朗" %>
    </div><br>

    <div class="field">
      <%= f.label :last_name_kana, "(セイ)" %>　　　　　　　　　　<%= f.label :fist_name, "(メイ)" %><br />
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder:"例：ヤマダ" %>　<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder:"例：タロウ" %>
    </div><br>

    <div class="field">
      <%= f.label :postal_code, "郵便番号（ハイフンなし）" %><br>
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder:"例：1234567" %>
    </div><br>

    <div class="field member-address">
      <%= f.label :address, "住所" %><br>
      <%= f.text_field :address, autofocus: true, autocomplete: "address", collection: JpPrefecture::Prefecture.all, :value_method => :name, include_blank: '都道府県',:size=>"38", placeholder: "例：東京都新宿区0-0-0" %>
    </div><br>

    <div class="field">
      <%= f.label :phone_number,"電話番号（ハイフンなし）" %><br>
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder: "例：01234567890" %>
    </div><br>

    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "例：yamada.t1231@garden.com" %>
    </div><br>

    <div class="field">
      <%= f.label :password, "パスワード(6文字以上)" %>
      <% if @minimum_password_length %>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder:"半角英数字6文字以上" %>
    </div><br>

    <div class="field">
      <%= f.label :password_confirmation,"パスワード(確認用)" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"再度パスワードを入力してください" %>
    </div><br>

    <div class="actions">
      <%= f.submit "新規登録", class: "btn btn-success btn-lg center-block" %>
    </div>
  <% end %>
  <div class="devise-links" style="margin: 20px 0">
    <%= render "customers/shared/links" %>
  </div>
</div>
