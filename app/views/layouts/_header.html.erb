<header class="container-fluid" style="background-color: green">
 <nav class="navbar navbar-expand-lg">
  <div>
    <%= link_to public_customer_top_path do %>
      <!-- ロゴ完成時文字列と画像を入れ替え予定 -->
      <h1 style="color: gold">LOGO</h1>
    <% end %>
  </div>

  <div class="collapse navbar-collapse">
    <ul class="nav navbar-nav navbar-right wf-mplus1p">
      <!-- 会員でログインしている時 -->
      <% if member_signed_in? %>
        <li id="youkoso">ようこそ、<%= current_customer.full_name %>さん！</li>
        <li><%= link_to public_customers_path do %><i class="fas fa-user"></i>マイページ<% end %></li>
        <li><%= link_to public_items_path do %>商品一覧<% end %></li>
        <li><%= link_to public_cart_items_path do %>カート<% end %></li>
        <li><%= link_to destroy_member_session_path, method: :delete do %><i class="fas fa-sign-out-alt"></i>ログアウト<% end %></li>
      <!-- 管理者でログインしている時 -->
      <% elsif admin_signed_in?%>
        <li><%= link_to ' 商品一覧', admin_items_path %></li>
        <li><%= link_to ' 会員一覧', admin_members_path %></li>
        <li><%= link_to ' 注文履歴一覧', admin_orders_path %></li>
        <li><%= link_to ' ジャンル一覧', admin_genres_path %></li>
        <li><%= link_to ' ログアウト', destroy_admin_session_path, method: :delete %></li>
        <li><input name="search" placeholder="search　🔍"></li>
      <!-- ログインしていない時 -->
      <% else %>
        <li><%= link_to public_items_path do %>商品一覧<% end %></li>
        <li><%= link_to public_about_path do %><i class="fas fa-building"></i>About<% end %></li>
        <li><%= link_to new_customer_registration_path do %><i class="fas fa-user-plus"></i>新規登録<% end %></li>
        <li><%= link_to new_customer_session_path do %><i class="fas fa-sign-in-alt"></i>ログイン<% end %></li>
      <% end %>
    </ul>
  </div>
 </nav>
</header><!-- /head -->
