<div class="col-8 offset-2">
  <h2>配送先登録 / 一覧</h2>
    <div class="new-address">
      <%= form_for @address, url:public_addresses_path, method: :post do |f| %>
      <div class="raw">
        <!-- 郵便番号 -->
        <div class="col-4">
          <%= f.label :郵便番号 %>
        </div>
        <div class="col-4">
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder:"ハイフンなし" %>
        </div>
        <!-- 住所 -->
        <div class="col-4">
          <%= f.label :住所 %>
        </div>
        <div class="col-4">
          <%= f.text_field :shipping_address, autofocus: true, autocomplete: "shipping_address", size: "70" %>
        </div>
        <!-- 宛名 -->
        <div class="col-4">
          <%= f.label :宛名 %>
        </div>
        <div class="col-4">
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div><br>
        <div class="col-4">
          <%= f.submit "登録する", class: "btn btn-primary" %>
        </div>
      </div>
      <% end %>
  </div>
  <div class="addresses-table raw">
    <table class="table table-bordered">
      <thead class="table-dark">
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.shipping_address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_public_address_path(address), method: :get, class: "btn btn-primary" %>　
            <%= link_to "削除する", public_address_path(address), method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
