<div class="col-8">
  <h2>ジャンル編集</h2><br>

  <%= form_for @genre, url: admin_genre_path(@genre.id) do |f| %>
    <%= f.text_field :name %>
    <label><%= f.radio_button :valid_invalid_status, :有効 %> 有効 </label>
    <label><%= f.radio_button :valid_invalid_status, :無効 %> 無効</label>
    <br>
    <br>
    <%= f.submit "変更を保存する", class: "btn btn-primary" %>
  <% end %>
</div>
