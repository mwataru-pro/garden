<div class="col-2"></div>
  <div class="col-8">
    <h2>会員一覧</h2><br>
  <table class="table table-hover">
    <thead>
      <tr class="active">
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= customer.first_name %><%= customer.last_name %></td>
        <td><%= customer.email %></td>
        <td><%= customer.whithdrawal_status %></td>
        <td><%= link_to "詳細", admin_customer_path(customer.id), class: "btn btn-primary btn-sm" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @customers %>
  </div>
