<div class="col-2"></div>
<div class="col-8">
  <br>
  <br>
  <h2><%= @customer.full_name %>さんの会員情報</h2>
  <br>
  <br>
  <table class="table">
    <tbody>
      <tr>
        <th>会員ID　</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th>氏名　</th>
        <td><%= @customer.full_name %></td>
      </tr>
      <tr>
        <th>フリガナ　</th>
        <td><%= @customer.full_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号　</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th>住所　</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号　</th>
        <td><%= @customer.phone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス　</th>
        <td><%= @customer.email %></td>
      </tr>
    </tbody>
  </table>
  <br>
  <%= link_to "編集する", edit_admin_customer_path(@customer), class:"btn btn-primary" %>
  <%= link_to "注文履歴一覧", admin_orders_path(@customer.id), class:"btn btn-primary" %>
</div>
<div class="col-2"></div>